<div class = "container-fluid">
    {{!--Map Location--}}
    <div class="row map-wrapper">
        <div id="accordion" role="tablist" aria-multiselectable="true" class="col-sm-3 stack my-side-bar">
            {{!-- This side bar div will be populated dynamically. --}}
             <div class="card">
              <div class="card-header" role="tab" id="headingOne">
                  <h5 class="mb-0" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                    Old Settlers' Cemetary
                  </h5>
                </div>
                <div id="collapseOne" class="collapse show" role="tabpanel" aria-labelledby="headingOne">
                  <div class="card-block">
                    <p>Cemetary with grave sights going back to the 1770s!</p>
                  </div>
                </div>
              </div>

              <div location-id="0" class="card">
                <div class='card-header' role='tab' id='heading0'>
                    <h5 class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapse0" aria-expanded="false" aria-controls="collapse0" class='mb-0'>Independence Square
                    </h5>
                </div>
                <div id="collapse0" class="collapse show" role="tabpanel" aria-labelledby="heading0">
                    <div class="card-block">
                        <p>101 N Tryon St</p>
                        <p>4 statues at Trade and Tryon, was a sight used for trading with native americans</p>
                    </div>
                </div>
            </div>

             <div location-id="1" class="card">
                <div class='card-header' role='tab' id='heading1'>
                    <h5 class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapse1" aria-expanded="false" aria-controls="collapse1" class='mb-0'>Independence Square
                    </h5>
                </div>
                <div id="collapse1" class="collapse show" role="tabpanel" aria-labelledby="heading1">
                    <div class="card-block">
                        <p>101 N Tryon St</p>
                        <p>4 statues at Trade and Tryon, was a sight used for trading with native americans</p>
                    </div>
                </div>
            </div>
        </div>
        <div id="map-location" class="col-sm-9 stack"></div>
    </div>
    <div class="row">
        <div class="col-sm-9 offset-sm-3">
            <div class="btn-group map-buttons"  role="group" aria-label="Basic example">
                <button type="button" class="btn btn-primary" id="add-location-btn" data-toggle="modal" data-target="add-location-modal">Add Location</button>
                <button type="button" class="btn btn-info" id="build-trip-btn">Build Trip</button>
                <button type="button" class="btn btn-primary" id="my-trips-btn" disabled>My Trips</button>
            </div>
            <div class="col-sm-7 offset-sm-3    ">
                <button type="button" class="btn btn-success" id="chevron-icon"><img src="assets/icons/arrows/chevrons-up.svg" alt="up-chev"></button>
            </div>
        </div>
    </div>
</div>
